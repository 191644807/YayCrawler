<?xml version="1.0" encoding="UTF-8"?>
<Configuration shutdownHook="disable">

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss.fff}{ABSOLUTE} &lt;%c&gt; %5p --- [%14t]: %m%n"/>
        </Console>

        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss.fff}{ABSOLUTE} &lt;%c&gt; %5p --- [%14t]: %m%n"/>
        </Console>

        <RollingRandomAccessFile name="SERVICE_LOG_FILE" fileName="${sys:user.dir}/logs/yaycrawler-master.log"
                                 filePattern="$${sys:user.dir}/logs/$${date:yyyy-MM}/yaycrawler-master-%d{yyyy-MM-dd}-%i.log.gz">

            <PatternLayout charset="UTF-8" pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>

        <Logger name="com.taobao.pamirs.schedule" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Logger>

        <logger name="yaycrawler.master" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
            <!--<appender-ref ref="ERROR-OUT"/>-->
            <!--<appender-ref ref="INFO-OUT"/>-->
            <!--<appender-ref ref="DEBUG-OUT"/>-->
        </logger>

        <!--<logger name="yaycrawler.spider.resolver" level="INFO" additivity="false">-->
        <!--&lt;!&ndash;<appender-ref ref="STDOUT"/>&ndash;&gt;-->
        <!--<appender-ref ref="EXPRESSION-RESOLVER-OUT"/>-->
        <!--</logger>-->

        <logger name="org.thymeleaf" level="WARN" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>

        <!-- Root Logger -->
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="SERVICE_LOG_FILE"/>
        </Root>

    </Loggers>

</Configuration>
